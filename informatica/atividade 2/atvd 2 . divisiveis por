
programa{
	
	funcao inicio()
	{
       inteiro  numero1
       inteiro  numero2
       real divisao


       //coleta de dados 
       escreva("digite um numero: ")
       leia(numero1)
       
       escreva("digite um numero: ")
       leia(numero2)
       
      //processamenyo de dados
      divisao = numero1/numero2


     se(numero1 % numero2 == 0)
     {
      escreva("os numeros sao divisiveis. ")
      escreva("resultado" + divisao)
     }
     senao
     {
      escreva("os numeros nao sao divisiveis")
     }








       
	}
}
