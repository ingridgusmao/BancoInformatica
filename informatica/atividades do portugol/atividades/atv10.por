programa { 
  funcao inicio() {
    inteiro numero

    escreva("Insira o número: ")
    leia(numero)
    
     se(numero % 2 == 1 )
	{
	escreva("Ele é Ímpar.")
	}
	senao
	{
	escreva("Ele é Par.")
	}
	
  }
}
